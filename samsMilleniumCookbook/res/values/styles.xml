<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <color name="viewLine">#474747</color>
    <color name="progressBarLine">#575757</color>
    <color name="fontColor">#222222</color>
    <color name="fontColorHint">#878787</color>
    
     <!-- used for recipe title color  -->
    <color name="titleFontColor">#777777</color>
    <color name="titleFontColorHint">#87BB87</color>
    
     <!-- used for recipe discription font -->
    <color name="recipeDiscriptionFontColor">#EEEEAA</color>
    <color name="recipeDiscriptionFontColorHint">#575757</color>
 
    
    <!-- used for overall background --> 
    <color name="bgStartColor">#b9bccd</color>
    <color name="bgMidColor">#9698a6</color>
    <color name="bgEndColor">#57585f</color>
 
    <!-- used for recipe title background --> 
    <color name="bgTitleStartColor">#232323</color>
    <color name="bgTitleMidColor">#454545</color>
    <color name="bgTitleEndColor">#232323</color>
    
    <!-- used for unselected ingredient background --> 
    <color name="ingredientGradientStartColor">#9698a6</color>
    <color name="ingredientGradientMidColor">#a8abbc</color>
    <color name="ingredientGradientEndColor">#9698a6</color>

	<!-- used for selected ingredient background -->    
    <color name="ingredientGradientSelectStartColor">#b8bac8</color>
    <color name="ingredientGradientSelectMidColor">#cadccd</color>
    <color name="ingredientGradientSelectEndColor">#b8bac8</color>
    
    
    <style name="recipeRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/chicken_rating_bar</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">25dp</item>
    </style>
    
    <style name="CustomTheme" parent="android:Theme">
   		<item name="android:radioButtonStyle">@style/RadioButton</item>
	</style>
	
	<style name="RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
   		<item name="android:button">@drawable/radio</item>
	</style>

	<style name="app_theme" parent="@android:style/Theme">
   		<item name="android:editTextStyle">@style/editTextStyle</item>
   		<item name="android:textViewStyle">@style/textViewStyle</item>
   		<item name="android:buttonStyle">@style/buttonStyle</item>
   		<item name="android:spinnerStyle">@style/spinnerStyle</item>
   		<item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
   		<item name="android:windowNoTitle">true</item>
	</style>
	
	<style name="editTextStyle" parent="@android:style/Widget.EditText">
    	<item name="android:textColor">@color/fontColor</item>
    	<item name="android:textColorHint">@color/fontColorHint</item>
	</style>
	
	<style name="textViewStyle" parent="@android:style/Widget.TextView">
    	<item name="android:textColor">@color/fontColor</item>
	</style>
	
		<style name="spinnerStyle" parent="@android:style/Widget.Spinner">
    	<item name="android:background">@drawable/select_button</item>
    	<item name="android:textColor">@color/fontColor</item>
	</style>
	
	<style name="buttonStyle" parent="@android:style/Widget.Button">
    	<item name="android:textColor">@color/fontColor</item>
     	<item name="android:background">@drawable/button_selector</item>
<!--     	<item name="android:alpha">0.7</item> -->
	</style>
	
	<style name="WindowTitleBackground">     
        <item name="android:background">@drawable/background</item>
        <item name="android:textColor">#aa55aa</item>                   
    </style>
    
	<style name="Theme.Splash" parent="android:Theme">
    	<item name="android:windowBackground">@drawable/default_pic</item>
    	<item name="android:windowNoTitle">true</item>
  	</style>
  
	  
</resources>