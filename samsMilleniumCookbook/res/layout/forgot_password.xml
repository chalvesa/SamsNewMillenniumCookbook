<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:orientation="vertical" >
            
            <TextView
         android:id="@+id/pref1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerInParent="false"
         android:layout_gravity="top"
         android:paddingTop="5dp"
         android:text="@string/yourTestQuestion" >
	    
	</TextView>
	
            <TextView
                android:id="@+id/resetPassTestQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pref1"
                android:layout_gravity="top"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingTop="5dp"
                android:text="Question"
                android:textSize="16sp"
                android:textStyle="italic"
                android:typeface="serif" >
	    
	</TextView>
	
    <TextView
        android:id="@+id/pref2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingTop="10dp"
        android:layout_below="@+id/resetPassTestQuestion"
        android:text="@string/enterAnswer" >
	    
	</TextView>
	
	<EditText
	    android:id="@+id/resetPassTestAnswer"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/pref2"
	    android:layout_gravity="top"
	    android:hint="@string/hintAnswer"
	    android:inputType="textWebEmailAddress"
	    android:maxLength="30" >
	    
	</EditText>

    	<Button
    	    android:id="@+id/btnResetPassword"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@+id/resetPassTestAnswer"
    	    android:layout_centerHorizontal="true"
    	    android:text="@string/resetPassword" />

</RelativeLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>